#!/usr/bin/env ruby

# set up the application path
$LOAD_PATH.unshift(File.expand_path(
  File.join(File.dirname(__FILE__), "../lib")
))

require "diffie-hellman"

dh = DiffieHellman.new
puts "p:" + dh.p.to_s + "\n\n"
puts "public key:" + dh.pub_key.to_s + "\n\n"
print "enter other key:"
puts "\nshared secret:" + dh.compute_key(gets.chomp).to_s
